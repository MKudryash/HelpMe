<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MatuleMe" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSurface">@color/gray2</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSurface">@color/gray1</item>
    </style>

    <style name="TittleOB" parent="Theme.MatuleMe" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DescriptionOB" parent="Theme.MatuleMe" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#D8D8D8</item>
    </style>

    <style name="BtnWhite" parent="Theme.MatuleMe" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:paddingVertical">17dp</item>
        <item name="android:background">@drawable/shape_white_10rad</item>
    </style>

    <style name="BtnBlue" parent="Theme.MatuleMe" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingVertical">17dp</item>
        <item name="android:background">@drawable/shape_blue_10rad</item>
    </style>

</resources>