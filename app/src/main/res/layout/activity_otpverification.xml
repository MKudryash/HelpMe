<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.SignIn"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/btn_back"/>

        <TextView
            android:id="@+id/tTittle"
            style="@style/TittleBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OTP Проверка"
            android:visibility="visible"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tDesc"
            style="@style/DescriptionDGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="40dp"
            android:lineSpacingExtra="5dp"
            android:text="Пожалуйста, Проверьте Свою Электронную Почту, Чтобы Увидеть Код Подтверждения"
            android:visibility="visible"
            tools:ignore="HardcodedText" />
        
        <TextView
            style="@style/TextHint1"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:text="OTP Код"
            android:visibility="visible"
            tools:ignore="HardcodedText" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp">
            
            <EditText
                android:id="@+id/tf1"
                style="@style/EditTextOTP"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/tf2"
                style="@style/EditTextOTP"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/tf3"
                style="@style/EditTextOTP"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/tf4"
                style="@style/EditTextOTP"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/tf5"
                style="@style/EditTextOTP"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/tf6"
                style="@style/EditTextOTP"
                android:layout_weight="1"/>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp">

            <TextView
                style="@style/GrayTextNormal"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:text="Отправить заново"/>

            <TextView
                android:id="@+id/txtTimer"
                style="@style/GrayTextNormal"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:text="00:30"/>

        </LinearLayout>



    </LinearLayout>

</androidx.core.widget.NestedScrollView>