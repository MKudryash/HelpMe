<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.Home"
    android:background="#F7F7F9">

    <!--Главная-->
    <LinearLayout
        android:id="@+id/LLTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/btnOpenSideMenu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="#FFFFFF"
            android:src="@drawable/btn_back"/>

        <TextView
            style="@style/TittleBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sneaker Shop"
            android:layout_weight="1"
            android:textSize="16sp"
            android:visibility="visible"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/btnOpenBasket"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_open_shop"/>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LLTop">

        <!--Главный LL-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTittle"
                android:layout_alignParentTop="true"
                style="@style/TittleBlack"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:text="Nike Air Max 270 Essential"/>

            <TextView
                android:id="@+id/txtTittle2"
                style="@style/GrayTextNormal"
                android:layout_below="@+id/txtTittle"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:textAlignment="textStart"
                android:text="Nike Club Max"/>

            <TextView
                android:id="@+id/txtPrice"
                style="@style/TittleBlack"
                android:layout_below="@+id/txtTittle2"
                android:layout_marginTop="10dp"
                android:textSize="26dp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:text="₽179.39"/>

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_below="@+id/txtPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:translationY="-50dp"
                android:adjustViewBounds="true"
                android:src="@drawable/img_cross"/>

            <ImageView
                android:layout_below="@+id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:translationY="-130dp"
                android:src="@drawable/img_under_img_product"/>

            <LinearLayout
                android:layout_below="@id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:translationY="-30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        android:layout_marginHorizontal="5dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/imgProduct1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/img_cross"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        android:layout_marginHorizontal="5dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/imgProduct2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/img_cross"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        android:layout_marginHorizontal="5dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/imgProduct3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/img_cross"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        android:layout_marginHorizontal="5dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/imgProduct4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/img_cross"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        android:layout_marginHorizontal="5dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/imgProduct5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/img_cross"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtDesc"
                    style="@style/GrayTextNormal"
                    android:layout_below="@+id/txtTittle"
                    android:lineSpacingExtra="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:textAlignment="textStart"
                    android:text="Вставка Max Air 270 обеспечивает непревзойденный комфорт в течение всего дня. Изящный дизайн ........"/>

                <TextView
                    android:id="@+id/btnOpenMoreDesc"
                    style="@style/GrayTextNormal"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/txtTittle"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:textAlignment="textEnd"
                    android:textColor="?attr/colorPrimary"
                    android:text="Подробнее"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/RlInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="20dp">

            <ImageView
                android:id="@+id/btnOpenFav"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/btn_heart"/>

            <LinearLayout
                android:id="@+id/btnAddBasket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:paddingHorizontal="30dp"
                android:background="@drawable/shape_blue_10rad">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_shop"/>

                <TextView
                    style="@style/BtnBlue"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/btnReset"
                    android:text="В корзину" />

            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>