<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_10rad"
    android:paddingVertical="20dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnOpen"
        style="@style/DescriptionOB"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:text="Проверьте Ваш Email"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/btnOpen1"
        style="@style/DescriptionOB"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:text="Мы Отправили Код Восстановления Пароля На Вашу Электронную Почту."
        android:textColor="@color/gray2"
        app:layout_constraintTop_toBottomOf="@+id/btnOpen"
        tools:layout_editor_absoluteX="20dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>