<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.Home"
    android:background="#FFFFFF">

    <!--Главная-->
    <LinearLayout
        android:id="@+id/LLTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/txtCategory"
            style="@style/TittleBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Профиль"
            android:layout_weight="1"
            android:textSize="16sp"
            android:visibility="visible"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/btnSave"
            style="@style/TittleBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Готово"
            android:textSize="16sp"
            android:visibility="visible"
            android:textColor="@color/blue"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LLTop">

        <!--Главный LL-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgUser"
                android:layout_marginTop="30dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/img_user"/>

            <TextView
                android:id="@+id/txtName"
                style="@style/TextHint1"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:text="Emmanuel Oyiboke"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:textSize="24dp"
                android:textStyle="normal"
                android:visibility="visible"
                tools:ignore="HardcodedText" />

            <TextView
                style="@style/TextHint1"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:text="Изменить фото профиля"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="visible"
                tools:ignore="HardcodedText" />


            <TextView
                style="@style/TextHint1"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:text="Имя"
                android:visibility="visible"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="@drawable/shape_white_10rad">

                <EditText
                    android:id="@+id/inptName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@null"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_nice"/>

            </LinearLayout>

            <TextView
                style="@style/TextHint1"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:text="Фамилия"
                android:visibility="visible"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="@drawable/shape_white_10rad">

                <EditText
                    android:id="@+id/inptSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@null"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_nice"/>

            </LinearLayout>

            <TextView
                style="@style/TextHint1"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:text="Адрес"
                android:visibility="visible"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="@drawable/shape_white_10rad">

                <EditText
                    android:id="@+id/inptAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@null"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_nice"/>

            </LinearLayout>

            <TextView
                style="@style/TextHint1"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:text="Телефон"
                android:visibility="visible"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="@drawable/shape_white_10rad">

                <EditText
                    android:id="@+id/inptPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:background="@null"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_nice"/>

            </LinearLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>