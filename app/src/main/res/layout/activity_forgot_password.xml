<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.SignIn"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/btn_back"/>

        <TextView
            android:id="@+id/tTittle"
            style="@style/TittleBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Забыл Пароль"
            android:visibility="visible"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tDesc"
            style="@style/DescriptionDGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="40dp"
            android:lineSpacingExtra="5dp"
            android:text="Введите Свою Учетную Запись Для Сброса"
            android:visibility="visible"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/inptEmail"
            style="@style/EditTextAuth"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="xyz@gmail.com"/>



        <TextView
            android:id="@+id/btnSend"
            style="@style/BtnBlue"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:text="Отправить"/>



    </LinearLayout>

</androidx.core.widget.NestedScrollView>